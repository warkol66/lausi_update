		<action    path = "usersDoEdit"
							 type = "UsersDoEditAction"
							 name = "usersDoEdit"
							scope = "request"
					 validate = "true">
			<forward name="success" path="/Main.php?do=usersList&amp;message=saved" redirect="true"/>
			<forward name="successAdd" path="/Main.php?do=usersList&amp;message=added" redirect="true"/>
			<forward name="successCreated" path="/Main.php?do=usersEdit&amp;message=saved" redirect="true"/>
		</action>
-->
		<action    path = "usersDoEditInfoX"
							 type = "UsersDoEditInfoXAction"
							 name = "usersDoEditInfoX"
							scope = "request"
